<?xml version="1.0"?>
<!-- Here are defined the content types that should be shown on BikaLIMS Configuration (Site Setup) -->
<object name="portal_controlpanel" meta_type="Plone Control Panel Tool"
 xmlns:i18n="http://xml.zope.org/namespaces/i18n"
 i18n:domain="plone">

<configlet title="Kit-Templates" action_id="bika_kittemplates"
    appId="bika.sanbi" category="bika" condition_expr=""
    icon_expr="string:++resource++bika.lims.images/samplepartition.png"
    url_expr="string:$portal_url/bika_setup/bika_kittemplates"
    visible="True"
  i18n:attributes="title">
  <permission>BIKA: Manage Bika</permission>
</configlet>

<configlet title="Biospecimen types" action_id="bika_biospectypes"
    appId="bika.sanbi" category="bika" condition_expr=""
    icon_expr="string:++resource++bika.sanbi.images/biospectype.png"
    url_expr="string:$portal_url/bika_setup/bika_biospectypes"
    visible="True"
    i18n:attributes="title">
  <permission>BIKA: Manage Bika</permission>
</configlet>

</object>
