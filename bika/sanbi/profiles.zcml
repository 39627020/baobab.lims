<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="bika.sanbi">

  <genericsetup:registerProfile
      name="default"
      title="Customised Bika LIMS"
      directory="profiles/default"
      description='Custom extension profile for Bika LIMS'
      provides="Products.GenericSetup.interfaces.EXTENSION"/>

  <genericsetup:importStep
      name="setupCustomVarious"
      title="Bika LIMS: Various sanbi python setup actions"
      description="Final site configuration actions"
      handler="bika.sanbi.setuphandlers.setupCustomVarious">
    <depends name="content" />
    <depends name="toolset" />
  </genericsetup:importStep>

</configure>
