<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master"
	i18n:domain="bika">

<head>
    <style></style>
</head>

<body>
<metal:title fill-slot="content-title">
    <h1>
        <img tal:condition="view/icon | nothing"
            src="" tal:attributes="src view/icon"/>
        <span class="documentFirstHeading" tal:content="view/id" />
    </h1>
    <hr/>
</metal:title>

<metal:content-description fill-slot="content-description">
</metal:content-description>

<metal:content-core fill-slot="content-core" tal:define="
        portal context/@@plone_portal_state/portal;">
    <h3 style="margin-top:1em;">
        <tal:current_storage>
            <img title="current storage"
                tal:attributes="src string:${view/portal_url}/++resource++bika.lims.images/analysisprofile.png">
            <span i18n:translate="">Info Current Storage</span>:
        </tal:current_storage>
    </h3><br/>
    <table class="storage" style="border-collapse: collapse; width: 400px;">
        <tbody>
        <tr>
            <th i18n:translate="" style="border: 1px solid #cecfd5;
                                         padding: 10px 15px;">Storage Type: </th>
            <td tal:content="view/type" style="border: 1px solid #cecfd5;
                                               padding: 10px 15px;"></td>
        </tr>
        <tr style="background: #f0f0f2;">
            <th i18n:translate="" style="padding-bottom: .2em;border: 1px solid #cecfd5;
                                         padding: 10px 15px;">Storage Unit/Level: </th>
            <td tal:content="view/storage_unit" style="padding-bottom: .5em;border: 1px solid #cecfd5;
                                               padding: 10px 15px;"></td>
        </tr>
        <tr>
            <th i18n:translate="" style="padding-bottom: .2em;border: 1px solid #cecfd5;
                                         padding: 10px 15px;">Number of children: </th>
            <td tal:content="view/shelves" style="padding-bottom: .5em;border: 1px solid #cecfd5;
                                               padding: 10px 15px;"></td>
        </tr>
        <tr style="background: #f0f0f2;">
            <th i18n:translate="" style="padding-bottom: .2em;border: 1px solid #cecfd5;
                                         padding: 10px 15px;">Dimension: </th>
            <td tal:content="view/dimension" style="padding-bottom: .5em;border: 1px solid #cecfd5;
                                               padding: 10px 15px;"></td>
        </tr>
        </tbody>
    </table>
    <h3 style="margin-top:1em;">
        <img title="storages"
             tal:attributes="src string:${view/portal_url}/++resource++bika.lims.images/referencesample.png">
        <span i18n:translate="">List items of this storage:</span>
    </h3>
    <tal:parts replace="structure view/table"/>

    <tal:remarks define="
        field python:context.Schema()['Remarks'];
        errors python:{};">
        <p style="margin-top:2em;"/>
         <metal:widget use-macro="python:context.widget('Remarks', mode='edit')" />
    </tal:remarks>

</metal:content-core>
</body>
</html>