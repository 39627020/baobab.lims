<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="bika">

<head>
    <title></title>
    <metal:block fill-slot="javascript_head_slot"
            tal:define="portal context/@@plone_portal_state/portal;">
        <script type="text/javascript"
                tal:attributes="src python:portal.absolute_url() + '/bika_widgets/datetimewidget.js'"></script>
        <script type="text/javascript"
                tal:attributes="src python:portal.absolute_url() + '/bika_widgets/referencewidget.js'"></script>
        <link rel="stylesheet" type="text/css" media="all" href=""
                tal:attributes="href string:${portal/absolute_url}/bika_widgets/referencewidget.css"/>
    </metal:block>

    <metal:block fill-slot="style_slot">
        <tal:css>
        <style type="text/css">
            div#archetypes-fieldname-Dimension{
                display: inline-block;
            }
        </style>
        </tal:css>
    </metal:block>
</head>

<metal:content-title fill-slot="content-title">
    <h1>
        <img tal:condition="view/icon | nothing"
            src="" tal:attributes="src view/icon"/>
        <span tal:condition="context/Title"
              class="documentFirstHeading"
              tal:content="python:'Edit' + ' ' + context.Title()"></span>
        <span tal:condition="python:not context.Title()"
              class="documentFistHeading">Add New Storage</span>
    </h1>
    <hr/>
</metal:content-title>

<metal:content-description fill-slot="content-description">
</metal:content-description>

<metal:content-core fill-slot="content-core"
        tal:define="portal context/@@plone_portal_state/portal;">
    <form method="post" id="storageinventory_edit" name="storageinventory_form">
        <input type="hidden" name="submit" value="1"/>
        <table class="header_table">
            <thead class="inventory_storage_fields">
            <tal:field repeat="field python:view.get_fields_with_visibility('visible')">
                <tr tal:define="
                        fieldName python:field.getName();
                        fieldMacro here/widgets/field/macros/edit;
                        accessor python:field.getAccessor(context);
                        widget python:field.widget;
                        errors python:{};
                        mode string:edit;"
                    tal:condition="python: fieldName != 'Remarks' and fieldName != 'Dimension' ">

                    <td colspan="5">
                        <tal:x condition="python:mode!='structure'">
                            <metal:field
                                use-macro="python:context.widget(fieldName, mode=mode)"/>
                        </tal:x>
                    </td>

                </tr>
                <tr tal:define="fieldName python:field.getName();
                                fieldMacro here/widgets/field/macros/edit;
                                accessor python:field.getAccessor(context);
                                widget python:field.widget;
                                errors python:{};
                                mode string:edit;"
                    tal:condition="python: fieldName == 'Dimension'">
                    <td colspan="5">
                        <tal:x condition="python:mode!='structure'">
                            <metal:field
                                use-macro="python:context.widget(fieldName, mode=mode)"/>
                        </tal:x>

                    <div style="display: inline-block;padding-left:10px; border: 1px solid #837aff; padding: 5px; width: auto;">
                        <div data-fieldname="XAxis" id="XAxis" style="display: inline-block;">
                            <span style="font-weight: bold; padding-right: 5px;">X-Axis:</span>
                            <input id="xaxis_num" type="number" style="background-color: #FDFDFD;
                                                                                 border:1px solid #cdcdcd;
                                                                                 height: 20px;
                                                                                 width: 121px;"
                                   tal:attributes="value python:context.getXAxis() and context.getXAxis() or 0"/>
                        </div>
                        <div data-fieldname="YAxis" id="YAxis" style="display: inline-block;">
                            <span style="font-weight: bold; padding-right: 5px;">Y-Axis:</span>
                            <input id="yaxis_num"  type="number"  style="background-color: #FDFDFD;
                                                                                    border: 1px solid #cdcdcd;
                                                                                    height: 20px;
                                                                                    width: 121px;"
                                   tal:attributes="value python:context.getYAxis() and context.getYAxis() or 0"/>
                        </div>
                    </div>
                    </td>
                </tr>
            </tal:field>
            </thead>
        </table>
        <span>
            <div style="text-align: left; padding-bottom: 10px;">
                <input i18n:attributes="value"
                    class="context button allowMultiSubmit"
                    type="submit"
                    name="submit"
                    value="Save"/>
            </div>
        </span>
    </form>
</metal:content-core>
</html>