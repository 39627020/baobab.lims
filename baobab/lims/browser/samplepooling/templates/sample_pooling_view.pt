        <tr>
          <th style='text-align:left;' i18n:translate=''>Sample</th>
          <th style='text-align:left;' i18n:translate=''>Location</th>
          <th style='text-align:left;' i18n:translate=''>Quantity Pooled</th>
          <th style='text-align:left;' i18n:translate=''>Unit</th>
        </tr>
        <tr tal:repeat="input_sample view/input_samples">

            <td  style='text-align:left;' tal:content='python:input_sample["title"]'>barcode</td>
            <td  style='text-align:left;' tal:content='python:input_sample["location"]'>barcode</td>
            <td  style='text-align:left;' tal:content='python:input_sample["volume"]'>barcode</td>
